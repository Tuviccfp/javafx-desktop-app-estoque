<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.desafio.demoteste.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Text text="Bem vindo a aplicação.">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Text>

    <BorderPane fx:id="borderPane" prefWidth="400" prefHeight="300">
        <center>
            <VBox>
                <Label text="Login" styleClass=""/>
                <TextField fx:id="email" promptText="email" styleClass="" prefWidth="200"/>
                <PasswordField fx:id="password" promptText="Senha" styleClass="" prefWidth="200"/>
                <Button text="Entrar" onAction="#realizarLogin"/>
            </VBox>
        </center>
    </BorderPane>

</VBox>
